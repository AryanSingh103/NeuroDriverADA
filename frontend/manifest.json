{
  "manifest_version": 3,
  "name": "NeuroDrive Helper",
  "version": "0.1.2",
  "description": "Simplify & summarize web text with a dyslexia-friendly overlay.",
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "service_worker.js" },
  "permissions": ["storage", "contextMenus", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["assets/*"],
    "matches": ["<all_urls>"]
  }]
}
